	<body ev:onpageload="scwin.onpageload">
		<xf:group class="sub_contents" id="" style="">
			<xf:group class="ws_example_grp_desc" id="" style="">
				<w2:textbox escape="false" id=""
					label="InputCalendar의 속성 'footerDiv'의 설정 값에 따른 기능을 비교하는 예제입니다.&lt;br/&gt;이 속성은 화면의 달력 아이콘 클릭 시 생성되는 달력의 하단 영역에 대한 설정입니다.(달력의 하단 영역에는 오늘 날짜를 선택할 수 있는 버튼과 선택된 날짜 문자열이 출력됩니다.)&lt;br/&gt;하단 영역을 브라우저에 랜더링할 때 'Div' 태그로 생성할지에 대한 설정으로, 기본 태그는 'Table'입니다." style="">
				</w2:textbox>
				<w2:textbox escape="false" id="" label="설정 값에 따른 구성은 다음과 같습니다." style=""></w2:textbox>
				<w2:textbox escape="false" id=""
					label="- true: 태그 'Div'로 구성합니다.&lt;br/&gt;- false: [default] 태그 'Table'로 구성합니다."
					style="">
				</w2:textbox>
				<w2:textbox class="ws_example_txt_desc_info" escape="false" id="" label="달력 아이콘을 클릭하고, 화면에 표시되는 달력 하단(Today, 선택된 날짜 문자열)의 HTML 요소를 개발자도구(Elements)를 통해 확인합니다."
					style="">
				</w2:textbox>
			</xf:group>
			<xf:group class="example_div_tb_style_wrap" id="">
				<xf:group class="example_div_tr_style" id="" style="">
					<w2:textbox class="example_div_th_style" escape="false" id="" label="(기본 설정 값) 달력의 하단 영역을 태그 'table'로 구성하기" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<xf:group class="mb_def_box nobottom" id="" style="">
							<w2:inputCalendar calendarValueType="yearMonthDate" id="" style="width:110px;height: 26px;" footerDiv="false"></w2:inputCalendar>
						</xf:group>
					</xf:group>
				</xf:group>
				<xf:group class="example_div_tr_style" id="" style="">
					<w2:textbox class="example_div_th_style" escape="false" id="" label="달력의 하단 영역을 태그 'div'로 구성하기" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<xf:group class="mb_def_box nobottom" id="" style="">
							<w2:inputCalendar calendarValueType="yearMonthDate" id="" style="width:110px;height: 26px;" footerDiv="true"></w2:inputCalendar>
						</xf:group>
					</xf:group>
				</xf:group>
			</xf:group>
		</xf:group>
