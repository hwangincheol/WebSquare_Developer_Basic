	<body ev:onpageload="scwin.onpageload">
		<xf:group class="sub_contents" id="" style="">
			<xf:group class="ws_example_grp_desc" id="" style="">
				<w2:textbox escape="false" id=""
					label="페이지 숫자(번호) 사이에 구분자를 사용하는 예제입니다.&lt;br/&gt;이 기능은 속성 'useDelim'과 속성 'delimiter'을 설정하여 구현할 수 있습니다." style="">
				</w2:textbox>
				<w2:textbox escape="false" id=""
					label="아래는 속성별 간략한 설명입니다.&lt;br/&gt;- useDelim: [default:false, true] 구분자 사용 여부.&lt;br/&gt;- delimiter: 구분자로 사용할 문자열." style="">
				</w2:textbox>
				<w2:textbox escape="false" id="" label="추가 속성을 통해 구분자의 이미지, 스타일, 너비를 지정할 수 있습니다." style="">
				</w2:textbox>
			</xf:group>
			<xf:group class="example_div_tb_style_wrap" id="">
