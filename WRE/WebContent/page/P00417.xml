					<w2:textbox class="example_div_th_style" escape="false" id="" label="(기본 설정) 숫자 사이에 구분자 표시하지 않기" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<w2:pageList displayFormat="#" id="pgl_exam1" style="height: 30px;" useDelim="false">
						</w2:pageList>
					</xf:group>
				</xf:group>
				<xf:group class="example_div_tr_style" id="" style="">
					<w2:textbox class="example_div_th_style" escape="false" id="" label="숫자 사이에 구분자 표시하기" style=""></w2:textbox>
					<xf:group class="example_div_td_style" id="" style="">
						<w2:textbox class="ws5_example_txt_normal" escape="false" id="" label="구분자로 문자열 '|'이 설정되었습니다." style=""></w2:textbox>
						<w2:pageList deliImageStyle="color:#bbb; font-size:0.9em; padding-bottom:2px;" delimiter="|" displayFormat="#"
							id="pgl_exam2" style="height: 30px;" useDelim="true">
						</w2:pageList>
					</xf:group>
				</xf:group>
			</xf:group>
		</xf:group>
